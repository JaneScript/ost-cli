#!/usr/bin/env node
const program = require('commander');
const chalk = require('chalk');
const { clearConsole } = require('../lib/print');

// initLogger();
program
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('init', 'create new project');

program.on('--help', () => {
  console.log();
  console.log(chalk.yellow('    Run ost <command> --help for detailed usage of given command'));
  console.log();
});

program.parse(process.argv);


require('../src/terminal');

function initLogger(message) {
  clearConsole(message);
}
